{% assign settings = app.metafields.app_settings.general_setting %}

{% assign quriobot_paths = settings.value.quriobot_path | strip | newline_to_br | strip_newlines | split: "<br />" %}

{% assign quriobot_init = settings.value.quriobot_init %}

<script type="text/javascript">
  if (!Array.isArray(window.qbOptions)) {
    window.qbOptions = []
  }
  window.qbOptions.push({ "baseUrl": "https://botsrv2.com", "use": "{{ quriobot_paths.first }}" });
</script>
<script
  type="text/javascript"
  src="https://static.botsrv2.com/website/js/widget2.acbb0839.min.js"
  integrity="sha384-ZMtHIFwte+yyRQtC29dGm3j232b6y6qTIkkYgIfhJQeaKqDk9OQsiSKPBMhdFp2P"
  crossorigin="anonymous" defer
  data-no-minify="1">
</script>
<script type="text/javascript">
  {% if quriobot_init.size %}
    {{ quriobot_init }}
  {% else %}
    window.qbOptions = [
    {% for quriobot_path in quriobot_paths %}
      {
        "use": "{{ quriobot_path }}",
        "language": "{{ localization.language.iso_code }}-{{ localization.country.iso_code | downcase }}"
      },
      {% endfor %}
    ];
  {% endif %}
</script>

{% schema %}
  {
    "name": "Quriobot",
    "target": "head",
    "settings": []
  }
{% endschema %}